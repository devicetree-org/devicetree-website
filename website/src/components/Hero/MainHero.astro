---
import { Image, getImage } from "astro:assets";
import { getCollection } from "astro:content";

const { title, buttons, background_image, description } = Astro.props;
---

<div class="h-full mb-4">
  <div class:list={[`  opacity-90 h-[350px] `, "jumbotron-background "]}>
    <div
      class="lg:px-[190px] grid grid-cols-1 md:grid-cols-[1fr,auto] mx-auto text-left text-[#fff] justify-start container p-4"
    >
      <div class="mb-2 ali">
        <h1 class="md:mt-20 text-xl md:text-5xl">{title}</h1>
        <p>{description}</p>
        <!-- Buttons placed under the description -->
        <div class="mt-4">
          {
            buttons &&
              buttons.map((btn) => (
                <a
                  href="/specifications"
                  class:list={[
                    btn.class,
                    " md:w-40 rounded bg-primary text-white hover:bg-[#3d93b9]",
                  ]}
                >
                  {btn.title}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

<style
  define:vars={{
    backgroundUrl: background_image
      ? `url(${background_image.src})`
      : "#d3d3d3",
  }}
>
  .jumbotron-background {
    background-image: var(--backgroundUrl);
    background-position: center;
    object-fit: cover;
    position: relative;
    z-index: 1;
  }

  .jumbotron-background::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgb(0 0 0 / 93%);
    color: #fff;
    z-index: -1;
    height: 350px;
  }
</style>
